<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@user_book.user) do %>
              <%= attachment_image_tag(@user_book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
              <%= @user_book.user.name %>
              <% end %>
          </td>
          <td><%= link_to @user_book.title, book_path(@user_book) %></td>
          <td><%= @user_book.body %></td>
　      <td id="favorite_buttons_<%= @user_book.id %>">
　　　    <%= render "favorites/favorite", book: @user_book %>
        </td>
          </td>
          <td>コメント数<%= @user_book.book_comments.count %></td>
          <% if @user_book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@user_book), class: "btn btn-sm btn-success edit_book_#{@user_book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@user_book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
          <% @user_book.book_comments.each do |book_comment| %>
            <tr>
              <td>
                <%= link_to user_path(book_comment.user.id) do %>
                  <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
                  <%= book_comment.user.name %>
                  <td><%= book_comment.comment %></td>
                <% end %>
              </td>
              <% if @user_book.user == current_user %>
                <td><%= link_to 'Destroy', book_path(@user_book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger "%></td>
              <% end %>
            </tr>
          <% end %>
      </table>
      <%= form_with(model: [@user_book,@book_comment], local: true) do |f| %>
        <% if @book_comment.errors.any? %>
          <%= @book_comment.errors.count %>errors prohibited this comment from being saved
            <ul>
              <% @book_comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
        <%= f.text_area :comment %>
        <%= f.submit '送信' %>
      <% end %>
    </div>
  </div>
</div>